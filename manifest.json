{
  "manifest_version": 2 ,

  "name": "1Player",
  "description": "A chrome extension can control the player of music website.",
  "version": "1.0",

  "content_scripts":[
    {
      "matches": ["http://music.163.com/*"],
      "js": ["js/querySelect.js", "js/base.js","js/util.js", "js/content.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "1Player"
  },
  "permissions": [
    "activeTab"
  ]
}